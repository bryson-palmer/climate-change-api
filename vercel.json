{
  "version": 2,
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  },
  "installCommand": "npx playwright install-deps",
  "rewrites": [
    {"source": "/(.*)", "destination": "/api"}
  ],
  "regions": ["pdx1"]
}